{% extends 'base.html.twig' %}

{% block title %}Tabat - Accueil{% endblock %}

{% block main %}
<section id="section-activites" class="bg-light text-center">
    <div class="container">
        <h1 class="text-center pb-4">Notre blog</h1>
        <div class="row row-cols-3 g-3 justify-content-center">
        {% for article in articles %}
            <div class="col">
                <div class="card text-center">
                    <div class="card-body">
                        <h5 class="card-title">{{article.titre}}</h5>
                        <p class="card-text">{{article.contenu}}</p>
                    </div>
                    <div class="card-footer text-muted">{{article.auteur}}, le {{article.date|date("d/m/Y")}}</div>
                </div>
            </div>
        {% endfor %}
        </div>
    </div>
</section>
{% endblock %}
